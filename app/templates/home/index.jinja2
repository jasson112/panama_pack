<section class="categories">
    {% for item in categories %}
        <article class="categories__item">
            <a href="{{url_for('category', key=item.key)}}" class="categories__item-link">
                <figure class="categories__item-img">
                    <img src="{{ config['S3_LOCATION'] ~ item.image.path }}">
                </figure>
                <h2 class="categories__item-title">{{ item.name }}</h2>
            </a>
          </article>
    {% endfor %}
</section>
